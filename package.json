    "vite": "^4.4.9",
    "vite-plugin-node": "^3.0.2"
  },
  "dependencies": {
    "@types/node": "^20.5.1",
    "cross-env": "^7.0.3",
    "debug": "^4.3.4",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "extensionless": "^1.4.5",
    "mqtt": "^5.0.3",
    "vitest": "^0.34.2"
  }
